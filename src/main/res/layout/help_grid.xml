<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/help_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square"
            android:layout_row="0"
            android:layout_margin="5dp"
            android:layout_column="0">

        <ImageView
            android:id="@+id/accept_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/icon_accept"
            android:layout_margin="3dp"
            android:contentDescription="@string/check_mark_icon" />

        <TextView
            android:id="@+id/accept_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/help_accept"
            android:layout_margin="3dp"
            android:layout_marginRight="50dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:layout_column="0">

        <ImageView
            android:id="@+id/pictocreator_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/giraf_app_icon_picto_creator"
            android:layout_margin="3dp"
            android:contentDescription="@string/pictocreator_icon" />

        <TextView
            android:id="@+id/pictocreator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/help_pictocreater"
            android:layout_margin="3dp"
            android:layout_marginRight="50dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:layout_column="0">

        <ImageView
            android:id="@+id/categoryTool_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/giraf_app_icon_category_tool"
            android:layout_margin="3dp"
            android:contentDescription="@string/categorytool_icon" />

        <TextView
            android:id="@+id/categoryTool_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/help_cat_tool"
            android:layout_margin="3dp"
            android:layout_marginRight="50dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square"
            android:layout_row="3"
            android:layout_margin="5dp"
            android:layout_column="0">

        <ImageView
            android:id="@+id/categoryIndicator_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/icon_category"
            android:layout_margin="3dp"
            android:contentDescription="@string/pictogram_is_category_icon" />

        <TextView
            android:id="@+id/categoryIndicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/help_cat_indicator"
            android:layout_margin="3dp"
            android:layout_marginRight="50dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square"
            android:layout_row="4"
            android:layout_margin="5dp"
            android:layout_column="0">

        <ImageView
            android:id="@+id/spinner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/icon_arrow_down"
            android:layout_margin="3dp"
            android:contentDescription="@string/blue_down_arrow" />

        <TextView
            android:id="@+id/spinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/help_spinner"
            android:layout_margin="3dp"
            android:layout_marginRight="50dp"/>

        </GridLayout>

    </GridLayout>


</LinearLayout>