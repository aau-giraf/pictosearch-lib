<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:id="@+id/mainLinearLayout"
    tools:context=".PictoAdminMain"
    android:orientation="horizontal"
    android:background="@drawable/gbackground"> <!-- Change this to global -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="0.13"
        android:orientation="vertical" >

        <GridLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_square">

        <TextView
            android:id="@+id/categorySum"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/category_colon"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/pictogramSum"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/pictogram_colon"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:layout_column="0"/>

        </GridLayout>


        <GridView
            android:id="@+id/checkout"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_round">


        </GridView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center" >

            <GridLayout
                android:layout_margin="5dp"
                android:layout_width="400dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_row="0"/>

                <TextView
                    android:id="@+id/search_summary_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"

                    android:layout_row="1"
                    android:layout_column="0"/>

            </GridLayout>

            <Spinner
                android:id="@+id/category_dropdown"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:clickable="true"
                android:entries="@array/category_example">


            </Spinner>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/border_square"
                android:layout_weight="1">

            <EditText
                android:id="@+id/text_search_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/search"
                android:inputType="text"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp">
            </EditText>

            </LinearLayout>

            <dk.aau.cs.giraf.gui.GirafButton
                android:id="@+id/search_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:icon="@drawable/icon_search"/>

        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_round"
            android:layout_margin="5dp">

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/pageIndicator"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dp"
            android:padding="3dp"
            app:radius="6dp"/>

        <dk.aau.cs.giraf.gui.GViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewPager"
            android:layout_above="@id/pageIndicator"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_margin="5dp"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
