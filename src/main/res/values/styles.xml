<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <style name="CategoryDialogCrate">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="GirafCustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_overlay_color</item>
        <item name="sv_showcaseColor">@color/showcase_button_color</item>
        <item name="sv_buttonText">NÃ¦ste</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="GirafLastCustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_overlay_color</item>
        <item name="sv_showcaseColor">@color/showcase_button_color</item>
        <item name="sv_buttonText">Luk</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#E0E0E0</item>
    </style>
    <style name="CustomDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#E0E0E0</item>
    </style>

</resources>